<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/SampleModuleBanner/:BannerId" method="GET">
        <service class="Mygento\SampleModule\Api\BannerRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="Mygento_SampleModule::banner"/>
        </resources>
    </route>
    <route url="/V1/SampleModuleBanner/search" method="GET">
        <service class="Mygento\SampleModule\Api\BannerRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Mygento_SampleModule::banner"/>
        </resources>
    </route>
    <route url="/V1/SampleModuleBanner" method="POST">
        <service class="Mygento\SampleModule\Api\BannerRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Mygento_SampleModule::banner"/>
        </resources>
    </route>
    <route url="/V1/SampleModuleBanner/:id" method="PUT">
        <service class="Mygento\SampleModule\Api\BannerRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Mygento_SampleModule::banner"/>
        </resources>
    </route>
    <route url="/V1/SampleModuleBanner/:BannerId" method="DELETE">
        <service class="Mygento\SampleModule\Api\BannerRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Mygento_SampleModule::banner"/>
        </resources>
    </route>
</routes>
