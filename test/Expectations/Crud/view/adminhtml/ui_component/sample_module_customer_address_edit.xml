<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sample_module_customer_address_edit.sample_module_customer_address_edit_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Mygento\Base\Block\Adminhtml\Component\Edit\SaveAndContinueButton"/>
            <button name="save" class="Mygento\Base\Block\Adminhtml\Component\Edit\SaveButton"/>
            <button name="reset" class="Mygento\Base\Block\Adminhtml\Component\Edit\ResetButton"/>
            <button name="delete" class="Mygento\Base\Block\Adminhtml\Component\Edit\DeleteButton"/>
            <button name="back" class="Mygento\Base\Block\Adminhtml\Component\Edit\BackButton"/>
        </buttons>
        <namespace>sample_module_customer_address_edit</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>sample_module_customer_address_edit.sample_module_customer_address_edit_data_source</dep>
        </deps>
    </settings>
    <dataSource name="sample_module_customer_address_edit_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="sample_module/customer_address/save"/>
        </settings>
        <dataProvider name="sample_module_customer_address_edit_data_source" class="Mygento\SampleModule\Model\CustomerAddress\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label></label>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer_address</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Id</label>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="city" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer_address</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">City</label>
                <visible>true</visible>
                <dataScope>city</dataScope>
            </settings>
        </field>
        <field name="customer_group" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer_address</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Customer Group</label>
                <visible>true</visible>
                <dataScope>customer_group</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Customer\Model\Customer\Source\Group"/>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="created_at" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer_address</item>
                </item>
            </argument>
            <settings>
                <dataType>date</dataType>
                <label translate="true">Created At</label>
                <visible>true</visible>
                <dataScope>created_at</dataScope>
            </settings>
        </field>
        <field name="updated_at" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer_address</item>
                </item>
            </argument>
            <settings>
                <dataType>date</dataType>
                <label translate="true">Updated At</label>
                <visible>true</visible>
                <dataScope>updated_at</dataScope>
            </settings>
        </field>
        <field name="price" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">customer_address</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Price</label>
                <visible>true</visible>
                <dataScope>price</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
