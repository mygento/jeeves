{
    "name": "mygento/jeeves",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nikita Tarasov",
            "email": "nikita@mygento.ru"
        }
    ],
    "description": "cli tool to generate M2 code",
    "require": {
        "symfony/console": "^5.0",
        "symfony/filesystem": "^5.0",
        "symfony/yaml": "^5.0",
        "sabre/xml": "^4.0",
        "nette/php-generator": "^3.0|^4.0",
        "consolidation/self-update": "^2.0.3",
        "mygento/coding-standard": "~2.14.0-beta5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": { "Mygento\\Jeeves\\": "src/Jeeves" }
    },
    "config": {
        "platform": {
            "php": "7.4.20"
        },
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "bin": ["bin/jeeves"]
}